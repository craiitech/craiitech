
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Helper Functions
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Robust Admin check.
     * Prioritizes the roles_admin master collection, then falls back to profile role.
     */
    function isAdmin() {
      let isAdminUser = exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
      let profilePath = /databases/$(database)/documents/users/$(request.auth.uid);
      let isProfileAdmin = exists(profilePath) && get(profilePath).data.role == 'Admin';
      return isSignedIn() && (isAdminUser || isProfileAdmin);
    }
    
    /**
     * Safe user profile fetch.
     */
    function getUserData() {
      let path = /databases/$(database)/documents/users/$(request.auth.uid);
      return exists(path) ? get(path).data : {};
    }

    function isAuditor() {
      return isSignedIn() && getUserData().role == 'Auditor';
    }

    // --------------------------------------------------------------------------
    // Collection Rules
    // --------------------------------------------------------------------------
    
    match /unitMonitoringRecords/{recordId} {
        // Oversight roles can read everything
        allow read: if isAdmin() || isAuditor();
        
        // Unit-level sharing: Split into discrete blocks for query optimizer compatibility
        allow read: if isSignedIn() && resource.data.unitId == getUserData().unitId;
        allow read: if isSignedIn() && resource.data.campusId == getUserData().campusId;
        
        allow write: if isAdmin();
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if (isSignedIn() && request.auth.uid == userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    match /roles_admin/{userId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /submissions/{submissionId} {
      // Oversight roles
      allow read: if isAdmin() || isAuditor();
      
      // User-level/Scoped read
      allow read: if isSignedIn() && (
        resource.data.userId == request.auth.uid || 
        resource.data.unitId == getUserData().unitId || 
        resource.data.campusId == getUserData().campusId ||
        getUserData().role.matches('(?i).*vice president.*')
      );

      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;

      allow update: if isAdmin() || (isSignedIn() && (
        resource.data.userId == request.auth.uid || 
        resource.data.unitId == getUserData().unitId || 
        resource.data.campusId == getUserData().campusId
      ));

      allow delete: if isAdmin();
    }

    match /risks/{riskId} {
      allow read: if isAdmin() || isAuditor();
      
      allow read: if isSignedIn() && (
        resource.data.unitId == getUserData().unitId ||
        resource.data.userId == request.auth.uid ||
        resource.data.campusId == getUserData().campusId
      );

      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      allow update: if isAdmin() || (isSignedIn() && (
        request.auth.uid == resource.data.userId || 
        getUserData().unitId == resource.data.unitId
      ));
      
      allow delete: if isAdmin();
    }

    match /roles/{roleId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /cycles/{cycleId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /campuses/{campusId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /campusSettings/{campusId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || (isSignedIn() && getUserData().campusId == campusId && (getUserData().role == 'Campus Director' || getUserData().role == 'Campus ODIMO'));
    }
    
    match /units/{unitId} {
      allow read: if isSignedIn();
      allow create: if isAdmin() || (isSignedIn() && getUserData().role == 'Campus Director');
      allow update: if isAdmin() || (isSignedIn() && (getUserData().role == 'Campus Director' || getUserData().role.matches('(?i).*vice president.*')));
      allow delete: if isAdmin();
    }

    match /activityLogs/{logId} {
      allow read: if isAdmin();
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }
    
    match /errorReports/{errorId} {
        allow create: if isSignedIn();
        allow read, update, delete: if isAdmin();
    }

    match /procedureManuals/{unitId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /eomsPolicyManuals/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /isoClauses/{clauseId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }

    match /auditPlans/{planId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }

    match /auditSchedules/{scheduleId} {
        allow read: if isAdmin() || isAuditor();
        
        allow read: if isSignedIn() && (
          resource.data.targetId == getUserData().unitId || 
          resource.data.targetId == request.auth.uid
        );
        
        allow create: if isAdmin();
        allow update: if isAdmin() || (isSignedIn() && getUserData().role == 'Auditor' && (resource.data.auditorId == null || resource.data.auditorId == request.auth.uid));
    }

    match /auditFindings/{findingId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() && getUserData().role == 'Auditor';
        allow update: if isAdmin() || (isSignedIn() && getUserData().role == 'Auditor' && request.auth.uid == resource.data.authorId);
        allow delete: if isAdmin();
    }

    match /correctiveActionPlans/{planId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        allow update: if (exists(resource.data) && resource.data.authorId == request.auth.uid) || isAdmin();
        allow delete: if isAdmin();
    }
  }
}
