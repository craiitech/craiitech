
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Helper Functions
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Safely checks if the user has a profile.
     */
    function hasProfile() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    /**
     * Safely retrieves the user's profile data.
     */
    function profile() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    /**
     * Master Admin Check.
     * Checks for either a dedicated admin role document or the role field in the profile.
     * Uses case-insensitive regex for the role string.
     */
    function isAdmin() {
      return isSignedIn() && (
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)) ||
        (hasProfile() && profile().get('role', '').matches('(?i).*admin.*'))
      );
    }

    /**
     * Auditor Check.
     */
    function isAuditor() {
      return isSignedIn() && hasProfile() && profile().get('role', '').matches('(?i).*auditor.*');
    }

    // --------------------------------------------------------------------------
    // Academic Program Monitoring (Strategic Quality Data)
    // --------------------------------------------------------------------------
    
    match /academicPrograms/{programId} {
        // Allow all signed-in staff to see the university offerings registry
        allow read: if isSignedIn();
        // Restrict management to Admins and Campus Directors
        allow write: if isAdmin() || (isSignedIn() && hasProfile() && (
          profile().get('role', '').matches('(?i).*director.*') || 
          profile().get('role', '').matches('(?i).*odimo.*')
        ));
    }

    match /programCompliances/{recordId} {
        // Allow all signed-in staff to see compliance data
        allow read: if isSignedIn();
        // Restrict editing to oversight roles or assigned campus coordinators
        allow write: if isAdmin() || (isSignedIn() && hasProfile() && (
          profile().get('role', '').matches('(?i).*director.*') || 
          profile().get('role', '').matches('(?i).*odimo.*') ||
          (profile().get('campusId', '') == (request.resource.data.campusId || resource.data.campusId) && profile().get('role', '').matches('(?i).*coordinator.*'))
        ));
    }

    // --------------------------------------------------------------------------
    // Core EOMS Collections
    // --------------------------------------------------------------------------

    match /unitMonitoringRecords/{recordId} {
        allow get, list: if isAdmin() || isAuditor();
        allow get, list: if isSignedIn() && hasProfile() && (
          resource.data.unitId == profile().get('unitId', '') || 
          resource.data.campusId == profile().get('campusId', '') ||
          profile().get('role', '').matches('(?i).*(vice president|director|odimo).*')
        );
        allow write: if isAdmin();
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if (isSignedIn() && request.auth.uid == userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    match /roles_admin/{userId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /submissions/{submissionId} {
      allow read: if isAdmin() || isAuditor();
      allow read: if isSignedIn() && hasProfile() && (
        resource.data.userId == request.auth.uid || 
        resource.data.unitId == profile().get('unitId', '') || 
        resource.data.campusId == profile().get('campusId', '') ||
        profile().get('role', '').matches('(?i).*(vice president|director|odimo).*')
      );
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isAdmin() || (isSignedIn() && hasProfile() && (
        resource.data.userId == request.auth.uid || 
        resource.data.unitId == profile().get('unitId', '') || 
        resource.data.campusId == profile().get('campusId', '')
      ));
      allow delete: if isAdmin();
    }

    match /risks/{riskId} {
      allow read: if isAdmin() || isAuditor();
      allow read: if isSignedIn() && hasProfile() && (
        resource.data.unitId == profile().get('unitId', '') ||
        resource.data.userId == request.auth.uid ||
        resource.data.campusId == profile().get('campusId', '') ||
        profile().get('role', '').matches('(?i).*(vice president|director|odimo).*')
      );
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isAdmin() || (isSignedIn() && hasProfile() && (
        request.auth.uid == resource.data.userId || 
        profile().get('unitId', '') == resource.data.unitId
      ));
      allow delete: if isAdmin();
    }

    match /roles/{roleId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /cycles/{cycleId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /campuses/{campusId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /campusSettings/{campusId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || (isSignedIn() && hasProfile() && profile().get('campusId', '') == campusId && (profile().get('role', '').matches('(?i).*(director|odimo).*')));
    }
    
    match /units/{unitId} {
      allow read: if isSignedIn();
      allow create: if isAdmin() || (isSignedIn() && hasProfile() && profile().get('role', '').matches('(?i).*director.*'));
      allow update: if isAdmin() || (isSignedIn() && hasProfile() && (profile().get('role', '').matches('(?i).*(director|vice president).*')));
      allow delete: if isAdmin();
    }

    match /activityLogs/{logId} {
      allow read: if isAdmin();
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }
    
    match /errorReports/{errorId} {
        allow create: if isSignedIn();
        allow read, update, delete: if isAdmin();
    }

    match /procedureManuals/{unitId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /eomsPolicyManuals/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /isoClauses/{clauseId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }

    match /auditPlans/{planId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }

    match /auditSchedules/{scheduleId} {
        allow read: if isAdmin() || isAuditor();
        allow read: if isSignedIn() && hasProfile() && (
          resource.data.targetId == profile().get('unitId', '') || 
          resource.data.targetId == request.auth.uid
        );
        allow create: if isAdmin();
        allow update: if isAdmin() || (isSignedIn() && hasProfile() && profile().get('role', '').matches('(?i).*auditor.*') && (resource.data.auditorId == null || resource.data.auditorId == request.auth.uid));
    }

    match /auditFindings/{findingId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() && hasProfile() && profile().get('role', '').matches('(?i).*auditor.*');
        allow update: if isAdmin() || (isSignedIn() && hasProfile() && profile().get('role', '').matches('(?i).*auditor.*') && request.auth.uid == resource.data.authorId);
        allow delete: if isAdmin();
    }

    match /correctiveActionPlans/{planId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        allow update: if (isSignedIn() && hasProfile() && (resource.data.authorId == request.auth.uid)) || isAdmin();
        allow delete: if isAdmin();
    }
  }
}
