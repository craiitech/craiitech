
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Helper Functions
     */
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * Robust Admin check that doesn't depend on the user profile existing.
     */
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    /**
     * Checks if the user is a member of a specific unit.
     */
    function isMemberOfUnit(unitId) {
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.unitId == unitId;
    }

    /**
     * Checks if the user is a member of a specific campus.
     */
    function isMemberOfCampus(campusId) {
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.campusId == campusId;
    }

    /**
     * Checks if the user has a supervisor role for a specific campus.
     */
    function isCampusSupervisor(campusId) {
      let userDocPath = /databases/$(database)/documents/users/$(request.auth.uid);
      return isSignedIn() && exists(userDocPath) && 
             get(userDocPath).data.campusId == campusId && 
             (get(userDocPath).data.role == 'Campus Director' || get(userDocPath).data.role == 'Campus ODIMO' || get(userDocPath).data.role == 'Vice President');
    }

    // --------------------------------------------------------------------------
    // Collection Rules
    // --------------------------------------------------------------------------
    
    match /unitMonitoringRecords/{recordId} {
        // Allow listing for all signed in users. Client-side queries handle unit/campus isolation.
        allow list: if isSignedIn();
        
        // Detailed document access restricted to Admin, unit members, or campus supervisors.
        allow get: if isAdmin() || isMemberOfUnit(resource.data.unitId) || isMemberOfCampus(resource.data.campusId) || isCampusSupervisor(resource.data.campusId);
        
        // Only Admin can record or modify monitoring visits.
        allow write: if isAdmin();
    }

    match /users/{userId} {
      allow get, list: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    match /roles_admin/{userId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /submissions/{submissionId} {
      // List is allowed for all signed in users. Client-side queries enforce isolation.
      allow list: if isSignedIn();

      // Read is allowed for Admin, Owner, or members of the same Unit/Campus.
      allow get: if isAdmin() || isOwner(resource.data.userId) || 
                   isMemberOfUnit(resource.data.unitId) || 
                   isCampusSupervisor(resource.data.campusId);

      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;

      allow update: if isAdmin() || isOwner(resource.data.userId) || 
                      isMemberOfUnit(resource.data.unitId) ||
                      isCampusSupervisor(resource.data.campusId);

      allow delete: if isAdmin();
    }

    match /risks/{riskId} {
      allow list: if isSignedIn();
      
      allow get: if isAdmin() || isOwner(resource.data.userId) || 
                   isMemberOfUnit(resource.data.unitId) ||
                   isCampusSupervisor(resource.data.campusId);

      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      allow update: if isAdmin() || isOwner(resource.data.userId) || isMemberOfUnit(resource.data.unitId);
      allow delete: if isAdmin();
    }

    match /roles/{roleId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /cycles/{cycleId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /campuses/{campusId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /campusSettings/{campusId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      allow write: if isAdmin() || isCampusSupervisor(campusId);
    }
    
    match /units/{unitId} {
      allow read: if isSignedIn();
      allow create: if isAdmin() || (isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Campus Director');
      allow update: if isAdmin() || (isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Campus Director' || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Vice President'));
      allow delete: if isAdmin();
    }

    match /activityLogs/{logId} {
      allow list, get: if isAdmin();
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }
    
    match /errorReports/{errorId} {
        allow create: if isSignedIn();
        allow read, list, update, delete: if isAdmin();
    }

    match /procedureManuals/{unitId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /eomsPolicyManuals/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /isoClauses/{clauseId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }

    match /auditPlans/{planId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }

    match /auditSchedules/{scheduleId} {
        allow list: if isSignedIn();
        allow get: if isAdmin() || isMemberOfUnit(resource.data.targetId) || isOwner(resource.data.targetId) || (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Auditor');
        allow create: if isAdmin();
        allow update: if isAdmin() || (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Auditor' && (resource.data.auditorId == null || resource.data.auditorId == request.auth.uid));
    }

    match /auditFindings/{findingId} {
        allow get, list: if isSignedIn();
        allow create: if exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Auditor';
        allow update: if isAdmin() || (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Auditor' && isOwner(resource.data.authorId));
        allow delete: if isAdmin();
    }

    match /correctiveActionPlans/{planId} {
        allow read, list: if isSignedIn();
        allow create: if isSignedIn();
        allow update: if isOwner(resource.data.authorId) || isAdmin();
        allow delete: if isAdmin();
    }
  }
}
