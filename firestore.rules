
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Core Philosophy: This ruleset implements a sophisticated security model that combines
     * strict user-ownership with a hierarchical Role-Based Access Control (RBAC) system.
     * The default posture remains denial of access, with permissions
     * explicitly granted based on user identity and assigned roles.
     *
     * Key Security Decisions:
     * - Hybrid Authorization: The rules use a hybrid approach. For read operations, they
     *   first check for efficient, custom auth token claims (role, campusId). If claims are
     *   not present (for users with older tokens), they fall back to a `get()` call to the
     *   user's profile document. This ensures backward compatibility.
     * - Strict Writes: For write operations (create, update, delete), rules strictly
     *   require custom claims, as `get()` calls are disallowed in these contexts for security.
     *   Admins updating user profiles will automatically set these claims, migrating users
     *   to the new system over time.
     * - Top-Level Collections: Collections like /submissions and /risks are at the top level
     *   to simplify supervisory queries. Security is maintained by embedding ownership fields
     *   (userId, campusId, unitId) in each document.
     */

    // --------------------------------------------------------------------------
    // Helper Functions
    // --------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return request.auth.token.role == 'Admin';
    }

    // --- Hybrid Role & Data Functions ---
    // These functions safely check for a custom claim first, then fall back to a DB read.

    function getRole() {
      return request.auth.token.role != null ? request.auth.token.role : getUserProfile().role;
    }

    function getCampusId() {
        return request.auth.token.campusId != null ? request.auth.token.campusId : getUserProfile().campusId;
    }
    
    function getUnitId() {
        return getUserProfile().unitId;
    }

    function isCampusDirector() {
      return getRole() == "Campus Director";
    }

    function isCampusOdimo() {
      return getRole() == "Campus ODIMO";
    }

    function isUnitOdimo() {
      return getRole() == "Unit ODIMO";
    }
    
    function isVicePresident() {
      return getRole().matches("Vice President.*");
    }

    // --- Helper for DB reads ---
    function getUserProfile() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    // --- Helpers for write rules (must use token) ---
    function hasTokenRole(roleName) {
        return isSignedIn() && request.auth.token.role == roleName;
    }
    
    function getTokenCampusId() {
        return request.auth.token.campusId;
    }


    // --------------------------------------------------------------------------
    // Collection Rules
    // --------------------------------------------------------------------------

    match /users/{userId} {
      allow get: if isSignedIn();
      allow list, create: if isOwner(userId);
      allow update: if isOwner(userId) || hasTokenRole('Admin');
      allow delete: if isOwner(userId) || hasTokenRole('Admin');
    }

    match /submissions/{submissionId} {
      allow get: if isAdmin()
                    || isOwner(resource.data.userId) 
                    || (isCampusOdimo() && getCampusId() == resource.data.campusId) 
                    || (isUnitOdimo() && getUnitId() == resource.data.unitId)
                    || (isCampusDirector() && getCampusId() == resource.data.campusId)
                    || (isVicePresident() && get(/databases/$(database)/documents/units/$(resource.data.unitId)).data.vicePresidentId == request.auth.uid);
      
      allow list: if isSignedIn();

      allow create: if isOwner(request.resource.data.userId)
                    && request.resource.data.campusId == getTokenCampusId();

      allow update: if isAdmin()
                    || isOwner(resource.data.userId) 
                    || (hasTokenRole('Campus ODIMO') && getTokenCampusId() == resource.data.campusId) 
                    || (hasTokenRole('Unit ODIMO') && getUserProfile().unitId == resource.data.unitId) // getUserProfile is ok here because unitId is not a claim
                    || (hasTokenRole('Campus Director') && getTokenCampusId() == resource.data.campusId)
                    || (hasTokenRole('Vice President') && get(/databases/$(database)/documents/units/$(resource.data.unitId)).data.vicePresidentId == request.auth.uid);

      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }

    match /risks/{riskId} {
      allow get: if isAdmin()
                    || (getUnitId() == resource.data.unitId)
                    || (isCampusOdimo() && getCampusId() == resource.data.campusId) 
                    || (isUnitOdimo() && getUnitId() == resource.data.unitId)
                    || (isCampusDirector() && getCampusId() == resource.data.campusId)
                    || (isVicePresident() && get(/databases/$(database)/documents/units/$(resource.data.unitId)).data.vicePresidentId == request.auth.uid);
      
      allow list: if isSignedIn();

      allow create: if getUserProfile().unitId == request.resource.data.unitId
                    && getTokenCampusId() == request.resource.data.campusId;
      
      allow update, delete: if (getUserProfile().unitId == resource.data.unitId) || isAdmin();
    }

    match /roles/{roleId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    match /submissionStatuses/{statusId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }
    
    match /cycles/{cycleId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }
    
    match /campuses/{campusId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }
    
    match /campusSettings/{campusId} {
      allow get: if (isSignedIn() && (getCampusId() == campusId || campusId == 'global')) || isAdmin();
      allow write: if isAdmin() || (hasTokenRole('Campus Director') && getTokenCampusId() == campusId) || (hasTokenRole('Campus ODIMO') && getTokenCampusId() == campusId);
      allow list: if isAdmin();
    }
    
    match /units/{unitId} {
      allow get, list: if isSignedIn();

      allow create: if hasTokenRole('Admin')
        || (
          hasTokenRole('Campus Director') &&
          request.resource.data.campusIds is list &&
          request.resource.data.campusIds.hasOnly([getTokenCampusId()])
        );
      
      // A Director can only add or remove their own campus from the campusIds list.
      allow update: if hasTokenRole('Admin')
        || hasTokenRole('Vice President') // VPs can edit units under them (e.g., assign a unit head)
        || (hasTokenRole('Campus Director') &&
             // Rule for ADDING their campus
             (request.resource.data.campusIds == resource.data.campusIds.concat([getTokenCampusId()])) ||
             // Rule for REMOVING their campus
             (request.resource.data.campusIds == resource.data.campusIds.removeAll([getTokenCampusId()]))
           );

      allow delete: if hasTokenRole('Admin')
        || (
          hasTokenRole('Campus Director')
          // Can only delete if it's the ONLY campus assigned to the unit
          && resource.data.campusIds.size() == 1
          && resource.data.campusIds[0] == getTokenCampusId()
        );
    }


    match /activityLogs/{logId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read, list: if isAdmin();
      allow update, delete: if false;
    }
    
    match /errorReports/{errorId} {
        allow create: if isSignedIn();
        allow read, list, update, delete: if isAdmin();
    }

    match /roles_admin/{userId} {
      allow read, list: if hasTokenRole('Admin');
      allow write: if hasTokenRole('Admin');
    }
  }
}

    