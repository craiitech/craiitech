
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Helper Functions
     */
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * Checks if the currently authenticated user has global Admin privileges
     * by checking for the existence of a document in the /roles_admin collection.
     * This is more robust than checking the user profile field.
     */
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    /**
     * Safely retrieves the user's profile data.
     */
    function getUserProfile() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    /**
     * Helper to check user roles from their profile document.
     */
    function hasRole(roleName) {
      return isSignedIn() && getUserProfile().role == roleName;
    }

    // --------------------------------------------------------------------------
    // Collection Rules
    // --------------------------------------------------------------------------
    
    match /users/{userId} {
      allow get, list: if isSignedIn();
      allow update: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow delete: if isAdmin();
    }
    
    match /roles_admin/{userId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /submissions/{submissionId} {
      // Allow access if Admin, Owner, or member of the SAME UNIT/CAMPUS
      allow get: if isAdmin()
                    || isOwner(resource.data.userId) 
                    || (getUserProfile().campusId == resource.data.campusId && (hasRole('Campus ODIMO') || hasRole('Campus Director')))
                    || (getUserProfile().unitId == resource.data.unitId);
      
      allow list: if isSignedIn();

      allow create: if isSignedIn() 
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.campusId == getUserProfile().campusId
                    && request.resource.data.unitId == getUserProfile().unitId;

      allow update: if isAdmin()
                    || isOwner(resource.data.userId) 
                    || (getUserProfile().campusId == resource.data.campusId && (hasRole('Campus ODIMO') || hasRole('Campus Director')))
                    || (getUserProfile().unitId == resource.data.unitId && hasRole('Unit ODIMO'));

      allow delete: if isAdmin();
    }

    match /risks/{riskId} {
      allow get: if isAdmin()
                    || (getUserProfile().unitId == resource.data.unitId)
                    || (getUserProfile().campusId == resource.data.campusId && (hasRole('Campus ODIMO') || hasRole('Campus Director')));
      
      allow list: if isSignedIn();

      allow create: if isSignedIn() 
                    && request.resource.data.unitId == getUserProfile().unitId
                    && request.resource.data.campusId == getUserProfile().campusId;
      
      allow update: if isAdmin() || (getUserProfile().unitId == resource.data.unitId);
      allow delete: if isAdmin();
    }

    match /roles/{roleId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /cycles/{cycleId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /campuses/{campusId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /campusSettings/{campusId} {
      allow get: if isSignedIn();
      allow write: if isAdmin() || (getUserProfile().campusId == campusId && (hasRole('Campus Director') || hasRole('Campus ODIMO')));
      allow list: if isAdmin();
    }
    
    match /units/{unitId} {
      allow read: if isSignedIn();
      allow create: if isAdmin() || hasRole('Campus Director');
      allow update: if isAdmin() || hasRole('Campus Director') || hasRole('Vice President');
      allow delete: if isAdmin();
    }

    match /activityLogs/{logId} {
      allow list: if isAdmin();
      allow get: if isAdmin();
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }
    
    match /errorReports/{errorId} {
        allow create: if isSignedIn();
        allow read, list, update, delete: if isAdmin();
    }

    match /procedureManuals/{unitId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /eomsPolicyManuals/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /isoClauses/{clauseId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }

    match /auditPlans/{planId} {
        allow read: if isAdmin() || hasRole('Auditor');
        allow write: if isAdmin();
    }

    match /auditSchedules/{scheduleId} {
        allow get: if isAdmin() 
                    || hasRole('Auditor')
                    || (resource.data.targetType == 'Unit' && getUserProfile().unitId == resource.data.targetId)
                    || (resource.data.targetType == 'User' && isOwner(resource.data.targetId));
        allow list: if isSignedIn();
        allow create: if isAdmin();
        allow update: if isAdmin() || (hasRole('Auditor') && (resource.data.auditorId == null || resource.data.auditorId == request.auth.uid));
    }

    match /auditFindings/{findingId} {
        allow get: if isSignedIn(); // Basic read allowed, UI filters visibility
        allow list: if isSignedIn();
        allow create: if hasRole('Auditor');
        allow update: if isAdmin() || (hasRole('Auditor') && isOwner(resource.data.authorId));
        allow delete: if isAdmin();
    }

    match /correctiveActionPlans/{planId} {
        allow read: if isSignedIn();
        allow list: if isSignedIn();
        allow create: if isSignedIn();
        allow update: if isOwner(resource.data.authorId) || isAdmin();
        allow delete: if isAdmin();
    }

    match /unitMonitoringRecords/{recordId} {
        allow read, list, write: if isAdmin();
    }
  }
}
