
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Helper Functions
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Safely checks if the user has a profile and returns it.
     * Prevents rules from crashing if document doesn't exist.
     */
    function getProfile() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function hasProfile() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    /**
     * Master Admin Check.
     * Robustly checks for admin status without crashing on missing documents.
     */
    function isAdmin() {
      return isSignedIn() && (
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)) ||
        (hasProfile() && getProfile().get('role', '') == 'Admin')
      );
    }

    /**
     * Auditor Check.
     */
    function isAuditor() {
      return isSignedIn() && hasProfile() && getProfile().get('role', '') == 'Auditor';
    }

    // --------------------------------------------------------------------------
    // Academic Program Monitoring (Strategic Quality Data)
    // --------------------------------------------------------------------------
    
    match /academicPrograms/{programId} {
        // Essential: Allow all signed-in staff to see the university offerings registry
        allow get, list: if isSignedIn();
        allow write: if isAdmin() || (isSignedIn() && hasProfile() && (getProfile().get('role', '') == 'Campus Director' || getProfile().get('role', '') == 'Campus ODIMO'));
    }

    match /programCompliances/{recordId} {
        // Essential: Allow all signed-in staff to see compliance data
        allow get, list: if isSignedIn();
        allow write: if isAdmin() || (isSignedIn() && hasProfile() && (
          getProfile().get('role', '') == 'Campus Director' || 
          getProfile().get('role', '') == 'Campus ODIMO' ||
          (getProfile().get('campusId', '') == (request.resource.data.campusId || resource.data.campusId) && getProfile().get('role', '').matches('(?i).*coordinator.*'))
        ));
    }

    // --------------------------------------------------------------------------
    // Core EOMS Collections
    // --------------------------------------------------------------------------

    match /unitMonitoringRecords/{recordId} {
        allow get, list: if isAdmin() || isAuditor();
        allow get, list: if isSignedIn() && hasProfile() && (
          resource.data.unitId == getProfile().get('unitId', '') || 
          resource.data.campusId == getProfile().get('campusId', '') ||
          getProfile().get('role', '').matches('(?i).*vice president.*')
        );
        allow write: if isAdmin();
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if (isSignedIn() && request.auth.uid == userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    match /roles_admin/{userId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /submissions/{submissionId} {
      allow read: if isAdmin() || isAuditor();
      allow read: if isSignedIn() && hasProfile() && (
        resource.data.userId == request.auth.uid || 
        resource.data.unitId == getProfile().get('unitId', '') || 
        resource.data.campusId == getProfile().get('campusId', '') ||
        getProfile().get('role', '').matches('(?i).*vice president.*')
      );
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isAdmin() || (isSignedIn() && hasProfile() && (
        resource.data.userId == request.auth.uid || 
        resource.data.unitId == getProfile().get('unitId', '') || 
        resource.data.campusId == getProfile().get('campusId', '')
      ));
      allow delete: if isAdmin();
    }

    match /risks/{riskId} {
      allow read: if isAdmin() || isAuditor();
      allow read: if isSignedIn() && hasProfile() && (
        resource.data.unitId == getProfile().get('unitId', '') ||
        resource.data.userId == request.auth.uid ||
        resource.data.campusId == getProfile().get('campusId', '') ||
        getProfile().get('role', '').matches('(?i).*vice president.*')
      );
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isAdmin() || (isSignedIn() && hasProfile() && (
        request.auth.uid == resource.data.userId || 
        getProfile().get('unitId', '') == resource.data.unitId
      ));
      allow delete: if isAdmin();
    }

    match /roles/{roleId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /cycles/{cycleId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /campuses/{campusId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /campusSettings/{campusId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || (isSignedIn() && hasProfile() && getProfile().get('campusId', '') == campusId && (getProfile().get('role', '') == 'Campus Director' || getProfile().get('role', '') == 'Campus ODIMO'));
    }
    
    match /units/{unitId} {
      allow read: if isSignedIn();
      allow create: if isAdmin() || (isSignedIn() && hasProfile() && getProfile().get('role', '') == 'Campus Director');
      allow update: if isAdmin() || (isSignedIn() && hasProfile() && (getProfile().get('role', '') == 'Campus Director' || getProfile().get('role', '').matches('(?i).*vice president.*')));
      allow delete: if isAdmin();
    }

    match /activityLogs/{logId} {
      allow read: if isAdmin();
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }
    
    match /errorReports/{errorId} {
        allow create: if isSignedIn();
        allow read, update, delete: if isAdmin();
    }

    match /procedureManuals/{unitId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /eomsPolicyManuals/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /isoClauses/{clauseId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }

    match /auditPlans/{planId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }

    match /auditSchedules/{scheduleId} {
        allow read: if isAdmin() || isAuditor();
        allow read: if isSignedIn() && hasProfile() && (
          resource.data.targetId == getProfile().get('unitId', '') || 
          resource.data.targetId == request.auth.uid
        );
        allow create: if isAdmin();
        allow update: if isAdmin() || (isSignedIn() && hasProfile() && getProfile().get('role', '') == 'Auditor' && (resource.data.auditorId == null || resource.data.auditorId == request.auth.uid));
    }

    match /auditFindings/{findingId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() && hasProfile() && getProfile().get('role', '') == 'Auditor';
        allow update: if isAdmin() || (isSignedIn() && hasProfile() && getProfile().get('role', '') == 'Auditor' && request.auth.uid == resource.data.authorId);
        allow delete: if isAdmin();
    }

    match /correctiveActionPlans/{planId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        allow update: if (isSignedIn() && hasProfile() && (resource.data.authorId == request.auth.uid)) || isAdmin();
        allow delete: if isAdmin();
    }
  }
}
