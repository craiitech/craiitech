
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Helper Functions
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Returns the user's profile data.
     * Firestore caches this single document fetch for the duration of the request.
     */
    function profile() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    /**
     * Checks if the user profile document exists.
     */
    function hasProfile() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    /**
     * Master Admin Check.
     * Uses the roles_admin master collection for high-security write operations.
     */
    function isAdmin() {
      return isSignedIn() && (
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)) ||
        (hasProfile() && profile().role == 'Admin')
      );
    }

    /**
     * Auditor Check.
     */
    function isAuditor() {
      return isSignedIn() && hasProfile() && profile().role == 'Auditor';
    }

    // --------------------------------------------------------------------------
    // Collection Rules
    // --------------------------------------------------------------------------
    
    match /unitMonitoringRecords/{recordId} {
        // Oversight roles and Admins
        allow read: if isAdmin() || isAuditor();
        
        // Unit-level access for Coordinators and ODIMOs
        allow read: if isSignedIn() && hasProfile() && (
          resource.data.unitId == profile().unitId || 
          resource.data.campusId == profile().campusId ||
          profile().role.matches('(?i).*vice president.*')
        );
        
        allow write: if isAdmin();
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if (isSignedIn() && request.auth.uid == userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    match /roles_admin/{userId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /submissions/{submissionId} {
      allow read: if isAdmin() || isAuditor();
      
      allow read: if isSignedIn() && hasProfile() && (
        resource.data.userId == request.auth.uid || 
        resource.data.unitId == profile().unitId || 
        resource.data.campusId == profile().campusId ||
        profile().role.matches('(?i).*vice president.*')
      );

      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;

      allow update: if isAdmin() || (isSignedIn() && hasProfile() && (
        resource.data.userId == request.auth.uid || 
        resource.data.unitId == profile().unitId || 
        resource.data.campusId == profile().campusId
      ));

      allow delete: if isAdmin();
    }

    match /risks/{riskId} {
      allow read: if isAdmin() || isAuditor();
      
      allow read: if isSignedIn() && hasProfile() && (
        resource.data.unitId == profile().unitId ||
        resource.data.userId == request.auth.uid ||
        resource.data.campusId == profile().campusId ||
        profile().role.matches('(?i).*vice president.*')
      );

      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      allow update: if isAdmin() || (isSignedIn() && hasProfile() && (
        request.auth.uid == resource.data.userId || 
        profile().unitId == resource.data.unitId
      ));
      
      allow delete: if isAdmin();
    }

    match /roles/{roleId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /cycles/{cycleId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /campuses/{campusId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /campusSettings/{campusId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || (isSignedIn() && hasProfile() && profile().campusId == campusId && (profile().role == 'Campus Director' || profile().role == 'Campus ODIMO'));
    }
    
    match /units/{unitId} {
      allow read: if isSignedIn();
      allow create: if isAdmin() || (isSignedIn() && hasProfile() && profile().role == 'Campus Director');
      allow update: if isAdmin() || (isSignedIn() && hasProfile() && (profile().role == 'Campus Director' || profile().role.matches('(?i).*vice president.*')));
      allow delete: if isAdmin();
    }

    match /activityLogs/{logId} {
      allow read: if isAdmin();
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }
    
    match /errorReports/{errorId} {
        allow create: if isSignedIn();
        allow read, update, delete: if isAdmin();
    }

    match /procedureManuals/{unitId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /eomsPolicyManuals/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /isoClauses/{clauseId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }

    match /auditPlans/{planId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }

    match /auditSchedules/{scheduleId} {
        allow read: if isAdmin() || isAuditor();
        
        allow read: if isSignedIn() && hasProfile() && (
          resource.data.targetId == profile().unitId || 
          resource.data.targetId == request.auth.uid
        );
        
        allow create: if isAdmin();
        allow update: if isAdmin() || (isSignedIn() && hasProfile() && profile().role == 'Auditor' && (resource.data.auditorId == null || resource.data.auditorId == request.auth.uid));
    }

    match /auditFindings/{findingId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() && hasProfile() && profile().role == 'Auditor';
        allow update: if isAdmin() || (isSignedIn() && hasProfile() && profile().role == 'Auditor' && request.auth.uid == resource.data.authorId);
        allow delete: if isAdmin();
    }

    match /correctiveActionPlans/{planId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        allow update: if (isSignedIn() && hasProfile() && (resource.data.authorId == request.auth.uid)) || isAdmin();
        allow delete: if isAdmin();
    }
  }
}
