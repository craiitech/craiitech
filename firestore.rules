
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Helper Functions
     */
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * Robust Admin check that doesn't depend on the user profile existing.
     */
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    /**
     * Safely fetches user profile data once per request.
     */
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    /**
     * Checks if the user profile document exists.
     */
    function userExists() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    // --------------------------------------------------------------------------
    // Collection Rules
    // --------------------------------------------------------------------------
    
    match /users/{userId} {
      allow get, list: if isSignedIn();
      allow update: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow delete: if isAdmin();
    }
    
    match /roles_admin/{userId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /submissions/{submissionId} {
      // List is allowed for all signed in users so the client can perform filtered queries.
      allow list: if isSignedIn();

      // Read is allowed for Admin, Owner, or members of the same Unit/Campus.
      allow get: if isAdmin() || isOwner(resource.data.userId) || 
                   (userExists() && (
                     getUserData().unitId == resource.data.unitId ||
                     (getUserData().campusId == resource.data.campusId && (getUserData().role == 'Campus Director' || getUserData().role == 'Campus ODIMO' || getUserData().role == 'Vice President'))
                   ));

      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;

      allow update: if isAdmin() || isOwner(resource.data.userId) || 
                      (userExists() && (
                        (getUserData().campusId == resource.data.campusId && (getUserData().role == 'Campus Director' || getUserData().role == 'Campus ODIMO')) ||
                        (getUserData().unitId == resource.data.unitId && getUserData().role == 'Unit ODIMO')
                      ));

      allow delete: if isAdmin();
    }

    match /risks/{riskId} {
      allow list: if isSignedIn();
      
      allow get: if isAdmin() || 
                   (userExists() && (
                     getUserData().unitId == resource.data.unitId ||
                     (getUserData().campusId == resource.data.campusId && (getUserData().role == 'Campus Director' || getUserData().role == 'Campus ODIMO'))
                   ));

      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      allow update: if isAdmin() || (userExists() && getUserData().unitId == resource.data.unitId);
      allow delete: if isAdmin();
    }

    match /roles/{roleId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /cycles/{cycleId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /campuses/{campusId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /campusSettings/{campusId} {
      allow get: if isSignedIn();
      allow write: if isAdmin() || (userExists() && getUserData().campusId == campusId && (getUserData().role == 'Campus Director' || getUserData().role == 'Campus ODIMO'));
      allow list: if isAdmin();
    }
    
    match /units/{unitId} {
      allow read: if isSignedIn();
      allow create: if isAdmin() || (userExists() && getUserData().role == 'Campus Director');
      allow update: if isAdmin() || (userExists() && (getUserData().role == 'Campus Director' || getUserData().role == 'Vice President'));
      allow delete: if isAdmin();
    }

    match /activityLogs/{logId} {
      allow list, get: if isAdmin();
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }
    
    match /errorReports/{errorId} {
        allow create: if isSignedIn();
        allow read, list, update, delete: if isAdmin();
    }

    match /procedureManuals/{unitId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /eomsPolicyManuals/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /isoClauses/{clauseId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }

    match /auditPlans/{planId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }

    match /auditSchedules/{scheduleId} {
        allow list: if isSignedIn();
        allow get: if isAdmin() || 
                    (userExists() && (
                      getUserData().role == 'Auditor' ||
                      (resource.data.targetType == 'Unit' && getUserData().unitId == resource.data.targetId) ||
                      (resource.data.targetType == 'User' && request.auth.uid == resource.data.targetId)
                    ));
        allow create: if isAdmin();
        allow update: if isAdmin() || (userExists() && getUserData().role == 'Auditor' && (resource.data.auditorId == null || resource.data.auditorId == request.auth.uid));
    }

    match /auditFindings/{findingId} {
        allow get, list: if isSignedIn();
        allow create: if userExists() && getUserData().role == 'Auditor';
        allow update: if isAdmin() || (userExists() && getUserData().role == 'Auditor' && isOwner(resource.data.authorId));
        allow delete: if isAdmin();
    }

    match /correctiveActionPlans/{planId} {
        allow read, list: if isSignedIn();
        allow create: if isSignedIn();
        allow update: if isOwner(resource.data.authorId) || isAdmin();
        allow delete: if isAdmin();
    }

    match /unitMonitoringRecords/{recordId} {
        allow list: if isSignedIn();
        allow get: if isAdmin() || (userExists() && (getUserData().unitId == resource.data.unitId || getUserData().campusId == resource.data.campusId));
        allow write: if isAdmin();
    }
  }
}
